{
  "name": "RSeQC",
  "title": "RNA-Seq Quality Control",
  "summary": "Generates QC metrics for RNA-Seq data using the RSeQC suite of tools. A graphical report of these metrics can be viewed in through the data browser.",
  "categories": ["RNA-Seq", "Reports", "Statistics"],
  "dxapi": "1.0.0",
  "inputSpec": [
    {"name": "mappings", "label": "RNA-Seq Mappings", "class": "gtable", "type": "LetterMappings"},
    {"name": "gene_model", "class": "gtable", "type": "Genes", "label": "Gene Model"},
    {"name": "contaminants", "label":"Contaminants", "class": "array:record", "type": "ContigSet", "optional":true},
    {"name": "original_reads", "label":"Original Reads", "class": "array:gtable", "type": "LetterReads", "optional":true}
  ],
  "outputSpec": [
    {"name": "report", "label": "Report", "class": "record", "type": "Report"}
  ],
  "runSpec": {"file": "RSeQC.py", "interpreter": "python2.7", "execDepends": [{"name": "python-numpy"}], "systemRequirements": {"read_distribution": {"instanceType":"dx_m2.2xlarge"}, "inner_distance": {"instanceType":"dx_m1.xlarge"}}},
  "version": "1.0.0",
  "details":{
    "upstreamAuthor": "Liguo Wang, Shengqin Wang, and Wei Li",
    "upstreamVersion": "2.3.3",
    "upstreamUrl": "http://code.google.com/p/rseqc/",
    "upstreamLicencses": ["GNU GLP v3"],
    "citations": ["doi: 10.1093/bioinformatics/bts356"]
  }
}
